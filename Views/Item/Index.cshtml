@model IEnumerable<WebApp.Models.Item>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Borrowed Items</h2>

        </div>
        <div class="col-6 text-right">
            <a asp-controller="item" asp-action="create" class="btn btn-primary">
                create new Items
            </a>
        </div>
    </div>
</div>


<br />
@if (Model.Count() > 0)
{
    <table class="table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Item List</th>
                <th>Borrower</th>
                <th>Lender</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td width="30%">@item.ItemName</td>
                    <td width="30%">@item.Borrow</td>
                    <td width="30%">@item.Lender</td>
                </tr>
            }
        </tbody>
    </table>}
else
{
    <p>NO items created yet</p>
}
